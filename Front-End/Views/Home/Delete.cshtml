@model BookModel;
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">Delete Confirmation</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Delete" asp-controller="Home">
                        <input type="hidden" asp-for="Id" />
                        <div class="alert alert-danger" role="alert">
                            Are you sure you want to delete <strong>@Html.DisplayTextFor(Model => Model.Title)</strong> from books?
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a class="btn btn-dark" asp-action="Index" asp-controller="Home">Return</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

