@model BookModel;
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col">
    <div class="row">
        <div class="card">
            <div class="card-header">
                <h4>Delete confirmation</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Delete" asp-controller="Home">
                    <input type="hidden" asp-for="Id" />
                    <div class="alert alert-danger" role="alert">
                        Are you sure you want to delete @Html.DisplayTextFor(Model=>Model.Title) from books?
                    </div>
                    <button type="submit" class="btn btn-danger">delete</button>
                    <a class="btn btn-dark" asp-action="Index" asp-controller="Home">return</a>
                </form>
            </div>
        </div>
    </div>
</div>

