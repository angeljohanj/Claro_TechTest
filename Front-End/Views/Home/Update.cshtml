@model BookModel;
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col">
    <div class="row">
        <div class="card">
            <div class="header-cont">
                <h4>Edit a book</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Update" asp-controller="Home">
                    <input type="hidden" asp-for="Id"/>
                    <div class="form-control">
                        <label>Title</label>
                        <input type="text" asp-for="Title" required />
                    </div>
                    <div class="form-control">
                        <label>Description</label>
                        <input asp-for="Description" required />
                    </div>
                    <div class="form-control">
                        <label>Page count</label>
                        <input type="number" asp-for="PageCount" />
                    </div>
                    <div class="form-control">
                        <label>Excerpt</label>
                        <textarea asp-for="Excerpt" placeholder="Type here" required></textarea>
                    </div>
                    <div class="form-control">
                        <label>Publish date</label>
                        <input asp-for="PublishDate" type="date" required></input>
                    </div>
                    <button type="submit" class="btn btn-success">Confirm</button>
                    <a class="btn btn-dark" asp-action="Index" asp-controller="Home">return</a>
                </form>
            </div>
        </div>
    </div>
</div>

