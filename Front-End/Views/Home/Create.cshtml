@model BookModel;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Create a Book</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create" asp-controller="Home">
                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <input type="text" class="form-control" asp-for="Title" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" asp-for="Description" rows="3" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Page Count</label>
                            <input type="number" class="form-control" asp-for="PageCount" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Excerpt</label>
                            <textarea class="form-control" asp-for="Excerpt" rows="3" placeholder="Type here" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Publish Date</label>
                            <input type="date" class="form-control" asp-for="PublishDate" required />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Create</button>
                            <a class="btn btn-dark" asp-action="Index" asp-controller="Home">Return</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

