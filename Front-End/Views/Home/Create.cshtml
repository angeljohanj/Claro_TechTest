@model BookModel;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col">
    <div class="row">
        <div class="card">
            <div class="card-header">
                <h4>Create a book</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Create" asp-controller="Home">
                    <div class="form-control">
                        <label>Title</label>
                        <input type="text" asp-for="Title" required/>
                    </div>
                    <div class="form-control">
                        <label>Description</label>
                        <input asp-for="Description" required/>
                    </div> 
                    <div class="form-control">
                        <label>Page count</label>
                        <input type="number" asp-for="PageCount"/>
                    </div>
                    <div class="form-control">
                        <label>Excerpt</label>
                        <textarea asp-for="Excerpt" placeholder="Type here" required></textarea>
                    </div>
                    <div class="form-control">
                        <label>Publish date</label>
                        <input asp-for="PublishDate" type="date" required></input>
                    </div>
                    <button type="submit" class="btn btn-success">create</button>
                    <a class="btn btn-dark" asp-action="Index" asp-controller="Home">return</a>
                </form>
            </div>
        </div>
    </div>
</div>

